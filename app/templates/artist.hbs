                      <a class="icon-facebook social-link" href="{{model.artist.facebook}}" title="Facebook" target="_blank">Facebook</a>
                    {{/if}}
                    {{#if model.artist.twitter}}
                      <a class="icon-twitter social-link" href="{{model.artist.twitter}}" title="Twitter" target="_blank">Twitter</a>
                    {{/if}}
