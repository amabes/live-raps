<div id="top" class="holder">
    <div class="sector clearfix">
      {{#link-to 'index' id="name" }}
        {{model.artist.name}}
      {{/link-to}}
      {{#if model.artist.banner}}
        <div id="banner-img">
          <img id="banner-img" src="{{model.artist.banner}}" />
        </div>
      {{/if}}
      <div id="downloadApps" class="applinks">
        <!--<a class="icon-spotify social-link" href="https://open.spotify.com/artist/6N1xia8s2Npb5BMk4GOzqa" title="Spotify" target="_blank"></a>-->
        <!-- <a class="icon-itunes social-link" href="" title="iTunes" target="_blank"></a> -->
        {{#if model.artist.spotifyUrl}}
          <a class="icon-spotify social-link" title="Spotify" href="{{model.artist.spotifyUrl}}">
            <img src="imgs/App-Store-Badge21.png" height="50" width="150">
          </a>
        {{/if}}
        {{#if model.artist.itunesApp}}
          <a id="itunes" href="{{model.artist.itunesUrl}}" title="iTunes">
            <img src="imgs/App-Store-Badge21.png" height="50" width="150">
          </a>
        {{/if}}
        {{#if model.artist.googleApp}}
          <a href="{{model.artist.googlePlayUrl}}" title="Google Play">
            <img src="imgs/Play-Store-Badge2.png" height="50" width="150">
          </a>
        {{/if}}
      </div>
    </div>
</div>
<div id="row-1" class="holder">
    <div class="sector clearfix">
        <div id="leftColumn" class="box multiBox fl">

          {{#if model.artist.soundcloudPlaylist}}
            <div id="widget_soundcloud" class="box">
              <div class="box-title">MUSIC</div>
              <div class="box-content">
                  {{{model.artist.soundcloudPlaylist}}}
              </div>
            </div>
            {{/if}}

            {{#if model.artist.photos}}
              <div id="widget_photos" class="box">
                  <div class="box-title">PHOTOS</div>
                  <div class="box-content">
                      <div id="photos" class="clearfix">
                        <div class="photos-wrap">
                          {{#each model.artist.photos as |photo|}}
                            <a href="{{photo.href}}" target="_blank">
                              <img src="{{photo.src}}" />
                            </a>
                          {{/each}}
                        </div>
                      </div>
                  </div>
              </div>
            {{/if}}

